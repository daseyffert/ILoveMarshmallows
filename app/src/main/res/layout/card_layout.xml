<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_layout_product_rating"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:padding="10dp"
            android:text="4.0"
            />
        <TextView
            android:id="@+id/card_layout_brand_name"
            android:layout_toLeftOf="@id/card_layout_product_rating"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33bbff"
            android:text="NAME"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/card_layout_product_name"
            android:layout_below="@+id/card_layout_brand_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:padding="5dp"
            />

        <LinearLayout
            android:id="@+id/card_layout_linear_layout_prices"

            android:layout_below="@id/card_layout_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_layout_original_price"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="$100.00"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/card_layout_price"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$90.00"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_weight="1"
                />

        </LinearLayout>

        <Button
            android:id="@+id/card_layout_details"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Details..."
            android:padding="5dp"
            android:layout_below="@id/card_layout_linear_layout_prices"/>

        <TextView
            android:id="@+id/card_layout_asin"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asin"
            android:layout_toRightOf="@id/card_layout_details"
            android:layout_below="@id/card_layout_linear_layout_prices"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>